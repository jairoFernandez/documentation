{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <div class="jumbotron">
        <h2>{{ 'manual_list'|trans }}</h2>
        <p><a class="btn btn-raised btn-primary btn-lg" data-toggle="modal" data-target="#open-dialog-manual">{{ 'ACTIONS.create'|trans }}</a></p>
    </div>
    {% for manual in manuals %}
        {% embed ':fragments:items.html.twig' %}
            {% block idManual %}{{ manual.id }}{% endblock %}
            {% block titleTutorial %}{{ manual.name }}{% endblock %}
            {% block descriptionTutorial %}{{ manual.description }}{% endblock %}
        {% endembed %}
    {% endfor %}
    </div>
    
    {% embed ':fragments:modal.html.twig' %}
        {% block idModal %}open-dialog-manual{% endblock %}
        {% block style %}width:1000px; margin-left: -35%{% endblock %}
        {% block titleModal %}{% endblock %}
        {% block contentModal %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="{{ 'ACTIONS.create'|trans }}" class="btn btn-raised btn-primary"/>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
   
{% endblock %}